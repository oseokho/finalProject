	@GetMapping("noticeList")
	public void noticeList(Model model, Criteria cri) {
		cri.setCategory(1);
		model.addAttribute("list", boardService.getList(cri));
		model.addAttribute("page", new PageDTO(boardService.getTotal(cri), cri));
		log.info("adminBoard");
	}
}
